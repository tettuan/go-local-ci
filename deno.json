{
  "name": "@tettuan/go-local-ci",
  "version": "0.1.0",
  "exports": "./mod.ts",
  "tasks": {
    "ci": "deno run --allow-read --allow-write --allow-run --allow-env ./mod.ts",
    "ci-debug": "deno run --allow-read --allow-write --allow-run --allow-env ./mod.ts --log-mode debug --log-key GO_CI_DEBUG --log-length M",
    "ci-silent": "deno run --allow-read --allow-write --allow-run --allow-env ./mod.ts --log-mode silent",
    "ci-batch": "deno run --allow-read --allow-write --allow-run --allow-env ./mod.ts --mode batch",
    "ci-all": "deno run --allow-read --allow-write --allow-run --allow-env ./mod.ts --mode all",
    "test": "deno test --allow-read --allow-write --allow-run --allow-env",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check mod.ts",
    "build": "deno run --allow-read --allow-write --allow-run --allow-env ./mod.ts --mode all --log-mode silent"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.8",
    "@std/path": "jsr:@std/path@^1.0.8",
    "@std/fs": "jsr:@std/fs@^1.0.5",
    "@std/cli": "jsr:@std/cli@^1.0.8",
    "@std/fmt": "jsr:@std/fmt@^1.0.2"
  },
  "exclude": [
    ".git",
    "node_modules",
    "dist",
    "build",
    "target",
    "vendor",
    "tests/fixtures"
  ],
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": false
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/", "tests/", "mod.ts"]
  },
  "lint": {
    "include": ["src/", "tests/", "mod.ts"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "test": {
    "include": ["tests/"]
  },
  "publish": {
    "include": [
      "mod.ts",
      "src/",
      "README.md",
      "LICENSE",
      "deno.json"
    ],
    "exclude": [
      "tests/",
      ".github/",
      ".git/",
      "docs/examples/"
    ]
  }
}
