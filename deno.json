{
  "name": "@aidevtool/ci-go",
  "version": "0.1.0",
  "exports": "./mod.ts",
  "tasks": {
    "test": "deno test --allow-read --allow-write --allow-run --allow-env",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check mod.ts",
    "ci:dirty": "deno run --allow-read --allow-write --allow-run --allow-env jsr:@aidevtool/ci --allow-dirty"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.8",
    "@std/path": "jsr:@std/path@^1.0.8",
    "@std/fs": "jsr:@std/fs@^1.0.5",
    "@std/cli": "jsr:@std/cli@^1.0.8",
    "@std/fmt": "jsr:@std/fmt@^1.0.2"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": false
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/", "mod.ts", "tests/"]
  },
  "lint": {
    "include": ["src/", "mod.ts", "tests/"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "test": {
    "include": ["tests/"]
  },
  "publish": {
    "include": [
      "mod.ts",
      "src/",
      "README.md",
      "LICENSE"
    ],
    "exclude": [
      "tests/**/*",
      ".agent/**/*",
      "scripts/**/*",
      ".github/**",
      ".git/**"
    ]
  }
}
